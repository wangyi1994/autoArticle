<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="120dp"
    android:id="@+id/make_scene_container"
    >
       <ImageView
           android:layout_centerHorizontal="true"
           android:id="@+id/make_scene_img"
           android:layout_width="120dp"
           android:layout_height="match_parent"
           android:src="@drawable/girl_pic"
           android:layout_above="@+id/make_scene_name"/>

        <ImageView
            android:id="@+id/make_scene_checked"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="7dp"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:visibility="gone"
            android:src="@drawable/checked" />

        <TextView
            android:id="@+id/make_scene_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:textSize="10dp"
            android:text="Cyra"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/make_scene_description"
            />
        <TextView
            android:id="@+id/make_scene_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="10dp"
            android:text="Cyra"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            />



    <View
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DCDCDC"/>
</RelativeLayout>
